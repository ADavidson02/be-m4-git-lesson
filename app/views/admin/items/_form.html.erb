<%= form_for([:admin, @item]) do |f| %>
  <p><%= f.label             :title %></p>
  <p><%= f.text_field        :title %></p>
  <p><%= f.label             :price %></p>
  <p><%= f.text_field        :price %></p>
  <p><%= f.label             :status %></p>
  <p><%= f.select            :status, Item.statuses.keys.map { |s| [s.humanize, s] } %></p>
  <p><%= f.label             :category %></p>
  <p><%= f.collection_select :category_id, Category.all, :id, :title %></p>
  <p><%= f.label             "Image" %></p>
  <p><%= f.file_field        :image %></p>
  <p><%= f.label             :description %></p>
  <p><%= f.text_area         :description %></p>

  <%= f.submit            "Create Item" %>
<% end %>
